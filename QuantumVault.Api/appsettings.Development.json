  "MAX_QUEUE_SIZE": "5000", // Max request queue size for load management

  "CPU_HIGH_THRESHOLD": "85", // CPU usage (%) before abrupt termination
  "CPU_LOW_THRESHOLD": "60", // CPU usage (%) to reset high usage conditions
